<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_fragment">

    <TextView
            android:id="@+id/average_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/average_uv_index"
            android:textSize="@dimen/font_small"
            android:textColor="@color/text_muted"
            android:layout_marginTop="@dimen/margin_to_the_edge"/>

    <TextView
            android:id="@+id/index_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/average_index"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/mock_text_medium"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/text_main"
            android:layout_margin="@dimen/space_between"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_for_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/index_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/space_between"
            tools:listitem="@layout/uv_index_item"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_for_days_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/recycler_view_for_index"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/space_between"
            tools:listitem="@layout/graph_uv_index_item"/>

</androidx.constraintlayout.widget.ConstraintLayout>